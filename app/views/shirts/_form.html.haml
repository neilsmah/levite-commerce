= simple_form_for @shirt, html: {multipart: true} do |f|
	- if @shirt.errors.any?
		#errors 
			%h2
			= pluralize(@shirt.errors.count, "error")
			prevented this Shirt from saving
			%ul
				- @shirt.errors.full_messages.each do |msg|
					%li =msg


	.form-group
		= f.input :image, input_html: {class: 'form-control'}
	
	.form-group
		= f.input :name, input_html: {class: 'form-control'}

	.form-group
		= f.input :price, input_html: {class: 'form-control'}

	= f.button :submit, class: "btn btn-primary"
